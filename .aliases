# Django

function rs() {
  if [ -z "$1" ]; then
    python manage.py runserver 0:8000
  else
    python manage.py runserver 0:"$1"
  fi
}

alias sdb='python manage.py syncdb'
alias sdbm='python manage.py syncdb --migrate'
